# EditorConfig is awesome: https://EditorConfig.org.

# Top-most EditorConfig file.
root = true

# For all files.
[*]
# Set indent size to 2 spaces.
indent_size = 2
# Set the maximum line length to 125 characters.
max_line_length = 80
# Add a new line a the end of each file.
insert_final_newline = true
